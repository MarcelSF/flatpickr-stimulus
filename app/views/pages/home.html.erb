<div class="container">
  <h1>Welcome to our form</h1>
  <%= form_with model: Appointment.new, data: { controller: 'flatpickr' }, authenticity_token: true do |f| %>
    <%= f.text_field :start_time, data: { flatpickr_target: "startTime" } %>
    <%= f.text_field :end_time, data: { flatpickr_target: "endTime" } %>
    <%= f.submit 'Schedule your appointment' %>
  <% end %>

  <ul>
    <% @appointments.each do |appointment|%>
      <li>
      <%= appointment.id %>
      <%= appointment.start_time %>
      <%= appointment.end_time %>
      </li>
    <% end %>
  </ul>
</div>


